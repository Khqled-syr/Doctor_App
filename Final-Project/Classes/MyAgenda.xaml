<Window x:Class="Final_Project.MyAgenda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" Background="White" AllowsTransparency="True" WindowStyle="None" Height="720" Width="1080" ResizeMode="NoResize" Icon="/Classes/home.png">

    <ListView x:Name="AgendaView" ItemsSource="{Binding AppointmentId}" SelectedItem="{Binding SelectedAppointment}">
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" />
                <GridViewColumn Header="Day" DisplayMemberBinding="{Binding Day}" />
                <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" />
            </GridView>
        </ListView.View>
    </ListView>

</Window>
