<Window x:Class="Final_Project.MyAgenda"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MyAgenda" Height="450" Width="800">
    <Grid>
        <ListBox ItemsSource="{Binding AgendaItems}" SelectedItem="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <StackPanel Width="100">
                            <TextBlock Text="{Binding StartTime, StringFormat='hh:mm tt'}" FontSize="16" FontWeight="Bold" />
                            <TextBlock Text="{Binding Duration, StringFormat='h\\h\\ m\\m'}" FontSize="12" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold" />
                            <TextBlock Text="{Binding Description}" FontSize="14" TextWrapping="Wrap" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
